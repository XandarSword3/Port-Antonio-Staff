# Environment Variables Configuration
# Copy this file to .env.local for local development
# For production, set these variables in your deployment platform (Vercel, etc.)

# =============================================================================
# REQUIRED - Supabase Configuration
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# REQUIRED - Application Configuration  
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# OPTIONAL - Analytics & Monitoring
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Vercel Analytics
VERCEL_ANALYTICS_ID=your-analytics-id

# Google Analytics (if used)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# =============================================================================
# OPTIONAL - Email Configuration (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternative email provider)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# OPTIONAL - SMS Configuration (for notifications)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# OPTIONAL - Payment Processing
# =============================================================================
# Stripe for payments (if implementing paid features)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# OPTIONAL - File Storage (for production)
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Cloudinary (alternative file storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# OPTIONAL - External API Integrations
# =============================================================================
# Customer website API (for data sync)
CUSTOMER_WEBSITE_API_URL=https://customer-website.com/api
CUSTOMER_WEBSITE_API_KEY=your-api-key

# OpenTable API (for reservation sync)
OPENTABLE_API_KEY=your-opentable-api-key
OPENTABLE_RESTAURANT_ID=your-restaurant-id

# =============================================================================
# OPTIONAL - Social Media APIs (for marketing features)
# =============================================================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

GOOGLE_PLACES_API_KEY=your-google-places-api-key

# =============================================================================
# OPTIONAL - Caching (for production scaling)
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# OPTIONAL - Logging & Debugging
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# =============================================================================
# OPTIONAL - Rate Limiting
# =============================================================================
# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# =============================================================================
# OPTIONAL - Security
# =============================================================================
# JWT Secret for additional security
JWT_SECRET=your-super-secret-jwt-key

# Session secret
SESSION_SECRET=your-session-secret-key

# =============================================================================
# DEVELOPMENT ONLY - Database Direct Access
# =============================================================================
# Only use these for development/testing
# Never use in production!
DATABASE_URL=postgresql://user:password@localhost:5432/database
DIRECT_DATABASE_URL=postgresql://user:password@localhost:5432/database
